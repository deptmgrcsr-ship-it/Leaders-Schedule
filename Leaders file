<body>

<h1>Team Schedule Board</h1>

<div id="board">
  <div class="column" ondrop="drop(event)" ondragover="allowDrop(event)">
    <h3>Monday</h3>
    <button onclick="addCard('Monday')">+ Add Schedule</button>
  </div>

  <div class="column" ondrop="drop(event)" ondragover="allowDrop(event)">
    <h3>Tuesday</h3>
    <button onclick="addCard('Tuesday')">+ Add Schedule</button>
  </div>

  <div class="column" ondrop="drop(event)" ondragover="allowDrop(event)">
    <h3>Wednesday</h3>
    <button onclick="addCard('Wednesday')">+ Add Schedule</button>
  </div>

  <div class="column" ondrop="drop(event)" ondragover="allowDrop(event)">
    <h3>Thursday</h3>
    <button onclick="addCard('Thursday')">+ Add Schedule</button>
  </div>

  <div class="column" ondrop="drop(event)" ondragover="allowDrop(event)">
    <h3>Friday</h3>
    <button onclick="addCard('Friday')">+ Add Schedule</button>
  </div>
</div>

<script>
  function addCard(day) {
    const schedule = prompt("Enter your schedule:");
    if (!schedule) return;

    const card = document.createElement("div");
    card.className = "card";
    card.innerHTML = schedule;
    card.draggable = true;
    card.ondragstart = drag;

    const columns = document.querySelectorAll(".column");
    columns.forEach(col => {
      if (col.querySelector("h3").innerText === day) {
        col.appendChild(card);
      }
    });
  }

  function allowDrop(ev) {
    ev.preventDefault();
  }

  function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.outerHTML);
    ev.target.remove();
  }

  function drop(ev) {
    ev.preventDefault();
    ev.currentTarget.insertAdjacentHTML("beforeend", ev.dataTransfer.getData("text"));
  }
</script>

</body>
</html>

